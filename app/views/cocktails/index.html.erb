<div class="container d-flex mt-3">
  <div class="mr-3">
    <%= cl_image_tag("g1nrs2ak157un7bdtqpc", width: 400, height: 300, crop: :fill) %>
  </div>

  <div>
    <div class="d-flex" style="align-items: baseline">
      <h1>Cocktails</h1>
      <i class="fas fa-cocktail ml-2"></i>
    </div>

    <hr>

    <ul>
      <div class="d-flex">
        <% @cocktails.each do |cocktail|%>
          <li>
            <%= link_to cocktail.name, cocktail_path(cocktail)  %>
          </li>
          <%= link_to cocktail_path(cocktail), method: :delete, class: "text-info", data: { confirm: 'Are you sure?'} do %>
            <i class="fa fa-trash ml-3"></i>
          <% end %>
        <% end %>
      </div>
    </ul>
    <hr>
    <%= link_to "+ Create one", new_cocktail_path %>

  </div>

</div>


